<%= form_with(model: @blog,local: true, url: choose_new_or_edit ) do |f|%>
  <div class="blog_section title_row">
    <div class="row">
      <%= f.label :title,class:'col-xs-offset-1' %>    
    </div>
    <div class="row">
      <%= f.text_field :title,class:'col-xs-offset-1 col-xs-10' %>    
    </div>
  </div>
  <div class="blog_section content_row">
    <div class="row">
      <%= f.label :content,class:'col-xs-offset-1'  %>    
    </div>
    <div class="row content_row">
      <%= f.text_area :content,class:'col-xs-offset-1 col-xs-10' %>    
    </div>
  </div>
  <div class="btn_rows">
    <%= f.submit "投稿",class:'btn btn-default submit_btn' %>
  </div>
<% end %>

<%= link_to 'back to index',blogs_path %>